<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.wcs.battlegeek.StatisticsActivity">

    <TextView
        android:id="@+id/textViewStatistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/statistics"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"/>

    <ImageButton
        android:id="@+id/imageButtonHome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_button"/>

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewStatistics"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:columnCount="5">

        <TextView
            android:id="@+id/textViewLevel1"
            android:text="@string/button_easy"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="center"
            android:layout_columnWeight="0.2"
            android:layout_rowWeight="1"/>

        <TextView
            android:id="@+id/textViewLevel2"
            android:text="@string/button_medium"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_gravity="center"
            android:layout_rowWeight="1"
            android:layout_columnWeight="0.2"/>

        <TextView
            android:id="@+id/textViewLevel3"
            android:text="@string/button_hard"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_gravity="center"
            android:layout_rowWeight="1"
            android:layout_columnWeight="0.2"/>

        <TextView
            android:id="@+id/textViewLevel4"
            android:text="@string/button_impossible"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_gravity="center"
            android:layout_rowWeight="1"
            android:layout_columnWeight="0.2"/>

        <TextView
            android:id="@+id/textViewLevelGames"
            android:layout_column="0"
            android:layout_columnWeight="0.2"
            android:layout_gravity="left|center_vertical"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:text="@string/gamesParts"/>

        <TextView
            android:id="@+id/textViewLevelGames1"
            android:text="0"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="center"
            android:layout_rowWeight="1"
