<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.wcs.battlegeek.StatisticsActivity">

    <TextView
        android:id="@+id/textViewStatistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/statistics"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"/>

    <ImageButton
        android:id="@+id/imageButtonHome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_button"/>

    <Spinner
        android:id="@+id/spinnerLevel"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStatistics"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:columnCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerLevel">

        <TextView
            android:id="@+id/textViewLevelGames"
            android:layout_column="0"
            android:layout_columnWeight="0.2"
            android:layout_gravity="left|center_vertical"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:text="@string/gamesParts"/>

        <TextView
            android:id="@+id/textViewLevelGames1"
            android:layout_column="1"
            android:layout_columnWeight="0.2"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:text="0"/>

        <TextView
            android:id="@+id/textViewLevelVictoryDefeats"
            android:layout_column="0"
            android:layout_columnWeight="0.2"
            android:layout_gravity="left|center_vertical"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:text="@string/victory_defeats"/>

        <TextView
            android:id="@+id/textViewLevelVictoryDefeats1"
            android:layout_column="1"
            android:layout_columnWeight="0.2"
            android:layout_gravity="center"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:text="0"/>

        <TextView
            android:id="@+id/textViewRatio"
            android:layout_column="0"
            android:layout_columnWeight="0.2"
            android:layout_gravity="left|center_vertical"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:text="@string/ratio"/>

        <TextView
            android:id="@+id/textViewLevelRatio1"
            android:layout_column="1"
            android:layout_columnWeight="0.2"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:layout_row="3"
            android:text="0"/>

        <TextView
            android:id="@+id/textViewLevelBestShotsCount"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_columnWeight="0.2"
            android:layout_gravity="left|center_vertical"
            android:text="@string/bestShotsCountLabel"/>

        <TextView
            android:id="@+id/textViewLevelBestShotsCountValue"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_gravity="center"
            android:layout_columnWeight="0.2"
            android:layout_rowWeight="1"
            android:text="0"/>

        <TextView
            android:id="@+id/textViewBestTime"
            android:layout_column="0"
            android:layout_columnWeight="0.2"
            android:layout_gravity="left|center_vertical"
            android:layout_row="5"
            android:layout_rowWeight="1"
            android:text="@string/bestTime"/>

        <TextView
            android:id="@+id/textViewLevelBestTime1"
            android:layout_column="1"
            android:layout_row="5"
            android:layout_gravity="center"
            android:layout_columnWeight="0.2"
            android:layout_rowWeight="1"
            android:text="0"/>

        <TextView
            android:id="@+id/textViewLevelTime"
            android:layout_column="0"
            android:layout_columnWeight="0.2"
            android:layout_gravity="left|center_vertical"
            android:layout_row="6"
            android:layout_rowWeight="1"
            android:text="@string/levelTime"/>

        <TextView
            android:id="@+id/textViewLevelTime1"
            android:layout_column="1"
            android:layout_columnWeight="0.2"
            android:layout_gravity="center"
            android:layout_row="6"
            android:layout_rowWeight="1"
            android:text="0"/>

        <TextView
            android:id="@+id/textViewTotalTimeLabel"
            android:layout_column="0"
            android:layout_columnWeight="0.2"
            android:layout_gravity="left|center_vertical"
            android:layout_row="7"
            android:layout_rowWeight="1"
            android:text="@string/totalTime"/>

        <TextView
            android:id="@+id/textViewLeveTotalTime"
            android:layout_column="1"
            android:layout_columnWeight="0.2"
            android:layout_gravity="center"
            android:layout_row="7"
            android:layout_rowWeight="1"
            android:text="0"/>

    </GridLayout>

</android.support.constraint.ConstraintLayout>
